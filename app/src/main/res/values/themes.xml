<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WallpaperGallery" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorText</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorForeground" tools:targetApi="o_mr1">@color/colorBackground</item>

        <item name="android:textColorSecondary">@color/colorIcon</item>
        <item name="android:popupMenuStyle">@style/Theme.WallpaperGallery.PopupMenu</item>
        <item name="popupMenuBackground">@drawable/ic_bg_rounded_popup</item>
    </style>

    <style name="Theme.WallpaperGallery.Test" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorForeground" tools:targetApi="o_mr1">@color/colorBackground</item>

        <item name="android:textColorSecondary">@color/colorIcon</item>
        <item name="android:popupMenuStyle">@style/Theme.WallpaperGallery.PopupMenu</item>
        <item name="popupMenuBackground">@color/colorBackground</item>
    </style>

    <style name="Theme.WallpaperGallery.Starting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.WallpaperGallery.MaterialButton">
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="iconTint">@color/colorAccentButtonText</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_4sdp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccentButtonText</item>
    </style>

    <style name="Theme.WallpaperGallery.MaterialButtonTransparent">
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="iconTint">@color/colorIcon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_4sdp</item>
        <item name="backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Theme.WallpaperGallery.Transparent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">
            true
        </item>
        <item name="android:popupMenuStyle">@style/Theme.WallpaperGallery.PopupMenu</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="Theme.WallpaperGallery.FullScreenDialogStyle" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor" tools:targetApi="o_mr1">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBlack
        </item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.WallpaperGallery.Dialog" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#57000000</item>
        <item name="colorPrimaryDark">#57000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:statusBarColor">#57000000</item>
        <item name="android:navigationBarColor">#57000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorControlActivated">@color/colorAccent
        </item>
    </style>

    <style name="Theme.WallpaperGallery.TextBold">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.WallpaperGallery.TextSemiBold">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.WallpaperGallery.TextMedium">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.WallpaperGallery.TextRegular">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.WallpaperGallery.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.WallpaperGallery.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.WallpaperGallery.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:itemBackground">@color/colorTransparent</item>
        <item name="popupMenuBackground">@drawable/ic_bg_rounded_popup</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">@dimen/_8sdp</item>
        <item name="android:dropDownHorizontalOffset">@dimen/_8sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_32sdp</item>>
    </style>

    <style name="Theme.WallpaperGallery.BottomSheet" parent="@style/Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.WallpaperGallery.TabText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Theme.WallpaperGallery.BaseBottomSheetDialog" parent="@style/Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.WallpaperGallery.BottomSheet</item>
        <item name="android:statusBarColor">@color/colorTransparent
        </item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="android:colorControlActivated">@color/colorAccent
        </item>
        <item name="android:navigationBarColor">@color/colorLightCard
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.WallpaperGallery.BottomSheetDialogTheme" parent="Theme.WallpaperGallery.BaseBottomSheetDialog" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>